extends layout.pug
block body
    main(class="main article__content")
        div(class="mediaText")
            div(class="mediaText__block" style="text-align: center;")
                a(href="https://img.aso.fr/core_app/img-cycling-tdf-png/skoda-v-3d-q/37320/0:0,683:806-683-0-100/db414" class="js-jzoom" role="button" data-modal-type="image" data-modal-class="modal__box--gutter is-modal-white" data-modal-width="683" data-modal-height="auto" data-xtclick="article::media-text-image::zoom" data-clicktype="A")
                    img(class="mediaText__img lazyItem js-lazy is-loaded" alt="" src="https://img.aso.fr/core_app/img-cycling-tdf-png/skoda-v-3d-q/37320/0:0,683:806-683-0-100/db414" style="max-width: 100%" width="100px")

            br
            div(class="mediaText__text")
                p
                    strong Plongez au cœur du Tour de France avec l’application officielle du Tour de France 2023 presented by ŠKODA !

        p
            = "En 2023, le Tour de France vous offre encore plus de contenus et vous permet d’être un acteur de la course grâce au "
            strong Tour de France Club
            = " !"
        p
            = "Téléchargez "
            strong gratuitement
            = " l’application pour ne rien manquer de la course, du Grand Départ Pays Basque 2023, préparer les "
            strong étapes
            = " avec nos experts, suivre en live toutes les étapes, consulter les "
            strong parcours
            = " et "
            strong classements
            = " officiels, jouer à la "
            strong Fantasy by Tissot
            = " ou encore voter pour le "
            strong Prix Antargaz de la Combativité
            = " !"

        div(class="imagesContainer row" style="text-align: center;")
            div(class="imagesContainer__item twoImages col-6")
                figure(class="figure is-center")
                    a(href="https://apps.apple.com/cm/app/tour-de-france-2021-by-%C5%A1koda/id1528742741?platform=iphone" target="_blank")
                        img(class="figure__image img--responsive lazyItem js-lazy is-loaded" src="https://img.aso.fr/core_app/img-cycling-tdf-png/app/37402/0:0,820:318-200-0-70/46fe7" alt="" width="200")

            div(class="imagesContainer__item twoImages col-6")
                figure(class="figure is-center")
                    a(href="https://play.google.com/store/apps/details?id=com.aso.tdf2012int" target="_blank")
                        img(class="figure__image img--responsive lazyItem js-lazy is-loaded" src="https://img.aso.fr/core_app/img-cycling-tdf-png/google/37403/0:0,820:318-200-0-70/54a3b" alt="" width="200")

        figure(class="figure is-center is-clear")
            img(class="figure__image img--responsive lazyItem js-lazy is-loaded" src="https://img.aso.fr/core_app/img-cycling-tdf-jpg/app-tdf2/37316/0:0,1200:800-1200-0-70/7707f" alt="" width="1200" height="800")


